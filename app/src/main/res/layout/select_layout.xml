<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/button_admin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="62dp"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/p01" />

        <ImageButton
            android:id="@+id/button_visitor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/button_admin"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/button_admin"
            android:background="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/p02" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_admin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:text="·选择你的身份"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/button_admin"
            android:text="管理员" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/button_visitor"
            android:layout_marginEnd="11dp"
            android:text="访客" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:text="点击图片继续..."
            android:textColor="#7e011111" />
    </RelativeLayout>
</LinearLayout>
